<Window x:Class="Игра.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Игра"
        mc:Ignorable="d"
        Title="Пузырьки" Height="450" Width="800">
    <Canvas Name="MyCanvas" MouseLeftButtonDown="ClickOnCanvas" Background="Gray">
        <Label Name="txtScore" FontSize="20" FontWeight="Bold" Content="Результат: 0" />
        <Label Name="txtLastScore" FontSize="20" FontWeight="Bold" Foreground="Purple" Content="Последний результат: 0" Canvas.Left="150" />
        <Rectangle Stroke="Black" Name="healthBar" Width="350" Fill="Red" Height="27" Canvas.Left="433" Canvas.Top="10" />
    </Canvas>
</Window>
